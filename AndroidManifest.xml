<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.iut.tchat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="4" />

    
    <!-- Allow to connect with internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fr.iut.tchat.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:label="Login Account" >
        </activity>

        <!-- Register Activity -->
        <activity
            android:name=".RegisterActivity"
            android:label="Register New Account" >
        </activity>
        
        <activity android:name="Contact"></activity>
        <activity android:name="CreateContact"></activity>
        <activity android:name="DeleteContact"></activity>
        
        <activity android:name="Inscription"></activity>
        
        <activity android:name="MdpPerdu"></activity>
        
        <activity android:name="SendMessage"></activity>
        
        <activity android:name="MessagingActivity"></activity>
    </application>
</manifest>